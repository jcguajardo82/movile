<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:padding="24dp"
    android:paddingTop="16dp">
    <TextView
        android:text="Nombre Cliente"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewNombre" />

       <TextView
        android:paddingTop="20dp"
        android:text="Tipo De Pago"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTipoPago" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_gravity="center">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingTop="20dp"
            android:layout_height="wrap_content">
            <TextView
                
                android:text="DireccÃ³n Cliente"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/textViewDireccion" />
            <ImageButton                
                android:src="@drawable/map"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:layout_weight="1"
                android:id="@+id/btnMap" />

        </LinearLayout>
    </RelativeLayout>





    <com.google.android.material.card.MaterialCardView
        android:clickable="false"
        android:focusable="false"
        android:checkable="false"
        android:layout_marginTop="15.0dp"
        android:layout_marginBottom="15.0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ListView
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="300.5dp"
            android:id="@+id/OrdenesListViewControl"
            android:layout_gravity="bottom"
            android:layout_marginTop="5.0dp"
            android:layout_marginBottom="5.0dp"
            android:layout_marginLeft="5.0dp"
            android:layout_marginRight="5.0dp" />

    </com.google.android.material.card.MaterialCardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_gravity="center">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEnProceso"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                app:backgroundTint="@color/colorVerde"
                android:layout_weight="1"
                android:text="@string/enProceso"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFinalizar"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                app:backgroundTint="@color/colorVerde"
                android:layout_weight="1"
                android:text="@string/loginBtnFinalizar"/>

        </LinearLayout>
    </RelativeLayout>




</LinearLayout>
